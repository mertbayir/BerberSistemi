@{
    Layout = "_LayoutCustomer.cshtml";
}

<h2>Fotoğraf Yükle ve Öneri Al</h2>

<form method="post" enctype="multipart/form-data">
    <div>
        <label>Fotoğraf Seç:</label>
        <input type="file" name="file" required />
    </div>
    <button type="submit">Analiz Et</button>
</form>

@if (ViewBag.AnalizSonucu != null)
{
    <h3>Analiz Sonucu</h3>
    <p>@ViewBag.AnalizSonucu</p>
}
else
{
    <p>Fotoğraf yükledikten sonra analiz sonucu burada görünecek.</p>
}

