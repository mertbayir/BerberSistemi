@{
    Layout = "_LayoutCustomer.cshtml";
}


<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4" style="max-width: 500px; border-radius: 10px;">
        <h3 class="text-center mb-4">Fotoğraf Analizi</h3>
        <form method="post" enctype="multipart/form-data" asp-action="AnalyzeImage">
            <div class="form-group">
                <label for="photo" class="form-label font-weight-bold">Fotoğraf Yükle</label>
                <input type="file" name="photo" id="photo" class="form-control border-primary" accept="image/*" required />
            </div>
            <button type="submit" class="btn btn-primary btn-block mt-3" style="background-color: #007bff; border-color: #007bff;">
                <i class="fas fa-upload"></i> Analiz Et
            </button>
        </form>
    </div>
</div>

