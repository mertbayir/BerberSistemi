@model User
@{
    ViewBag.Title = "Giriş Yap";
}

<h2>Giriş Yap</h2>

<form asp-action="Login" method="post">
    <br />
    <div class ="form-control">
        <label asp-for ="Email">Kullanıcı Adı:</label>
        <input type="text" asp-for="Email" required />
    </div>
    <br />
    <div class="form-control">
        <label asp-for="Password">Şifre:</label>
        <input type="password" asp-for="Password" required />
    </div>
    <br />
    <button type="submit">Giriş Yap</button>
    <br />
    <br />
    <p>Üye Değil Misiniz? <a href="Register">Buradan Üye Olun</a></p>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red;">@ViewBag.Error</p>
}

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

