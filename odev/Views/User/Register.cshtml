@model User

<h2 class="text-center">Üye Ol</h2>

<form asp-action="Register" method="post" class="register-form">
    
    <div class="form-group">
        <label asp-for="UserName" class="form-label">Ad Soyad:</label>
        <input asp-for="UserName" class="form-control" required placeholder="Kullanıcı adı girin" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Email" class="form-label">Kullanıcı Adı:</label>
        <input asp-for="Email" class="form-control" required placeholder="E-posta adresinizi girin" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="form-label">Şifre:</label>
        <input asp-for="Password" type="password" class="form-control" required placeholder="Şifrenizi girin" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary btn-lg">Üye Ol</button>
    </div>

    <div class="form-group text-center">
        <p>Hesabınız Zaten Var mı? <a href="Login" class="btn-link">Giriş Yapın</a></p>
    </div>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger text-center">
        @ViewBag.Error
    </div>
}

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .register-form {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f7f7f7;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        font-size: 16px;
        font-weight: 600;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border-radius: 4px;
        border: 1px solid #ddd;
        background-color: #fff;
        transition: border-color 0.3s ease;
    }

    .form-control:focus {
        border-color: #5cb85c;
        box-shadow: 0 0 5px rgba(92, 184, 92, 0.5);
    }

    .btn-primary {
        background-color: #5cb85c;
        border-color: #5cb85c;
        font-size: 16px;
        padding: 10px 20px;
        border-radius: 4px;
        width: 100%;
    }

    .btn-primary:hover {
        background-color: #4cae4c;
    }

    .btn-link {
        color: #007bff;
        text-decoration: none;
    }

    .btn-link:hover {
        text-decoration: underline;
    }

    .alert {
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 4px;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
    }

    h2 {
        color: #333;
        font-size: 28px;
        margin-bottom: 20px;
    }
</style>
