@model IEnumerable<odev.Models.User>

@{
    Layout = "_LayoutAdmin.cshtml";
}

<h2>Kullanıcı Yönetimi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Kullanıcı Adı</th>
            <th>Rol</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Password</td>
                <td>@user.Role</td>
                <td>
                    <!-- Silme butonu -->
                    <a href="@Url.Action("DeleteUser", "Admin", new { id = user.ID })" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>