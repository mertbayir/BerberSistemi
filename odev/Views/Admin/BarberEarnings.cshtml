@model List<BarberDailyEarningsViewModel>

@{
    Layout = "_LayoutAdmin.cshtml";
    ViewBag.Title = "Berber Kazanç Yönetim Sayfası";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Berberlerin Aylık Kazançları</h2>

    @foreach (var barber in Model)
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5>@barber.BarberName</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Tarih</th>
                            <th>Kazanç</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var earnings in barber.DailyEarnings)
                        {
                            <tr>
                                <td>@earnings.Date.ToString("dd.MM.yyyy")</td>
                                <td>@earnings.TotalEarnings.ToString("C")</td>
                            </tr>
                        }
                        <!-- Toplam Veriler -->
                        <tr class="font-weight-bold">
                            <td><strong>Toplam:</strong></td>
                            <td><strong>@barber.TotalAppointments randevu, Kazanç: @barber.TotalEarnings.ToString("C")</strong></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
