@model List<BarberDailyEarningsViewModel>

@{
    Layout = "_LayoutAdmin.cshtml";
}

<h2>Berberlerin Günlük Kazançları</h2>

@foreach (var barber in Model)
{
    <h3>@barber.BarberName</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>Kazanç</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var earnings in barber.DailyEarnings)
            {
                <tr>
                    <td>@earnings.Date.ToString("dd.MM.yyyy")</td>
                    <td>@earnings.TotalEarnings.ToString("C")</td>
                </tr>
            }
            <!-- Toplam Veriler -->
            <tr>
                <td><strong>Toplam:</strong></td>
                <td>
                    <strong>
                        Randevu: @barber.TotalAppointments,
                        Kazanç: @barber.TotalEarnings.ToString("C")
                    </strong>
                </td>
            </tr>
        </tbody>
    </table>
}
