@model odev.Models.BarberUserViewModel

@{
    Layout = "_LayoutAdmin.cshtml";
    ViewBag.Title = "Berber Ekle";
}

<h2>Personel Ekle</h2>

<form asp-action="AddBarber" method="post">

    <div class="form-group">
        <label asp-for="Barber.Name">Berber Adı</label>
        <input asp-for="Barber.Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="User.UserName">Kullanıcı Adı</label>
        <input asp-for="User.UserName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Barber.Skills">Yetkinlikler</label>
        <input asp-for="Barber.Skills" class="form-control" required></input>
    </div>

    <div class="form-group">
        <label asp-for="User.Email">Email</label>
        <input asp-for="User.Email" class="form-control" required></input>
    </div>

    <div class="form-group">
        <label asp-for="User.Password">Şifre</label>
        <input asp-for="User.Password" class="form-control" required></input>
    </div>



    <button type="submit" class="btn btn-primary">Ekle</button>

</form>
