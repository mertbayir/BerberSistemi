@{
    Layout = "_LayoutStaff.cshtml";
    ViewBag.Title = "Personel Sayfası";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Berber Randevuları</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .card-header {
            background: linear-gradient(45deg, #4e73df, #2c3e50);
            font-weight: bold;
        }

        .card-body {
            font-size: 1.1rem;
        }

        .btn-primary {
            background-color: #2c3e50;
            border: none;
        }

            .btn-primary:hover {
                background-color: #1a252f;
            }

        .card-footer {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div>
        <h4>Hoş Geldiniz, @TempData["UserName"]</h4>
    </div>
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white text-center">
                        <h4>Randevularınızı Görüntüleyin</h4>
                    </div>
                    <div class="card-body text-center">
                        <p class="card-text">
                            Kendi randevularınızı görüntülemek için aşağıdaki butona tıklayın.
                        </p>
                        <a href="/Staff/ManageApp" class="btn btn-primary btn-lg mt-3">
                            Randevuları Görüntüle
                        </a>
                    </div>
                    <div class="card-footer text-muted text-center">
                        Günlük ve haftalık randevularınıza kolayca erişin.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
